@model ImageWebApp.Models.PhotosModel

@{
    ViewBag.Title = "Photos";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

@foreach (var pic in Model.Pictures) {
    <div class="col-xs-18 col-sm-6 col-md-3">
        <div class="thumbnail">
            <img class="img-circle" src="/@pic["thumb"].Replace(Server.MapPath("~"),"").Replace("\\","/")" alt="Avatar">
            <div class="caption">
                <h4>Thumbnail label</h4>
                <p>@Html.ActionLink("View", "ViewPhoto", "Home", new { picture = pic["picture"].Replace(Server.MapPath("~"), "").Replace("\\", "/"), name = pic["name"], date = pic["date"]}, null)</p>
                <p><a href="View" class="btn btn-info btn-xs" role="button">View</a> <a href="#" class="btn btn-default btn-xs" role="button">Delete</a></p>
            </div>
        </div>
    </div>
}