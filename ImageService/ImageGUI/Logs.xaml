<UserControl x:Class="ImageGUI.Logs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageGUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label FontSize="30" HorizontalAlignment="Center" FontWeight="Bold">Logs</Label>

        <DataGrid>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" Width="Auto" Binding="{Binding Type}"/>
                <DataGridTextColumn Header="Message" Width="*" Binding="{Binding Message}"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
